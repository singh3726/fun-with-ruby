<!DOCTYPE html>
<html>
<head>
  <title>Garvai Group</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
      <div class="navbar-header">
				<%= link_to 'Sabbi Badmash Group', '#', class: 'navbar-brand' %>
			</div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
  					<li><%= link_to 'Home', pages_new_path %></li>
  					<% if !logged_in? %>
  						<li><%= link_to 'Log in', session_new_path %></li>
              <li><%= link_to 'Sign Up', pages_signUp_path %></li>
  					<% else %>
  						<li><%= link_to 'Profile', pages_show_path %></li>
  						<li><%= link_to 'Log out', logout_path, method: :delete %></li>
  					<% end %>
  				</ul>
			</div>
		</div>
	</nav>

	<div class="container">

		<% flash.each do |type, message| %>
			<div class="alert alert-<%= type %>"><%= message %></div>
		<% end %>

		<%= yield %>
	</div>


</body>
</html>
